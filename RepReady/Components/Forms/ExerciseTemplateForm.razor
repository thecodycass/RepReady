@using RepReady.Models.ExerciseTemplate
<div class="row">
    <div class="col-md-6">
        <EditForm Model="@Model" OnValidSubmit="@OnValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label for="sortOrder" class="form-label">Sort Order</label>
                <InputNumber id="sortOrder" class="form-control form-control-sm" @bind-Value="Model.SortOrder" />
                <ValidationMessage For="@(() => Model.SortOrder)" />
            </div>

            <div class="mb-3">
                <label for="defaultSets" class="form-label">Default Sets</label>
                <InputNumber id="defaultSets" class="form-control form-control-sm" @bind-Value="Model.DefaultSets" />
                <ValidationMessage For="@(() => Model.DefaultSets)" />
            </div>

            <div class="mb-3">
                <label for="defaultReps" class="form-label">Default Reps</label>
                <InputNumber id="defaultReps" class="form-control form-control-sm" @bind-Value="Model.DefaultReps" />
                <ValidationMessage For="@(() => Model.DefaultReps)" />
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-purple" disabled="@IsSubmitting">
                    <Saving IsSaving="@IsSubmitting"></Saving>
                </button>
                <button type="button" class="btn ms-2" @onclick="OnCancel">Cancel</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public ExerciseTemplateFormModel Model { get; set; } = null!;

    [Parameter, EditorRequired]
    public EventCallback OnValidSubmit { get; set; }

    [Parameter]
    public bool IsSubmitting { get; set; }

    [Parameter, EditorRequired]
    public EventCallback OnCancel { get; set; }
}
