@inject NavigationManager Navigation

<div class="card bg-shadow-gray">
    <div class="card-body p-3 p-md-4">
        <div class="col-md-8 col-lg-6">
            <EditForm id="exerciseForm" Model="@Model" OnValidSubmit="@OnValidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row align-items-center mb-3">
                    <div class="col-sm-4">
                        <label for="name" class="col-form-label">Name</label>
                    </div>
                    <div class="col-sm-8">
                        <InputText id="name" class="form-control form-control-sm" @bind-Value="Model.Name" @oninput="OnInput" />
                        <ValidationMessage For="@(() => Model.Name)" />
                    </div>
                </div>

                <div class="row align-items-center mb-3">
                    <div class="col-sm-4">
                        <label for="category" class="col-form-label">Category</label>
                    </div>
                    <div class="col-sm-8">
                        <InputSelect id="category" class="form-select form-select-sm" @bind-Value="Model.Category" @oninput="OnInput">
                            @foreach (var category in Globals.ExerciseCategories)
                            {
                                <option value="@category">@category.ToUpper()</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => Model.Category)" />
                    </div>
                </div>

                <div class="row align-items-center mb-3">
                    <div class="col-sm-4">
                        <label for="body_region" class="col-form-label">Body Region</label>
                    </div>
                    <div class="col-sm-8">
                        <InputSelect id="body_region" class="form-select form-select-sm" @bind-Value="Model.BodyRegion" @oninput="OnInput">
                            @foreach (var region in Globals.BodyRegions)
                            {
                                <option value="@region">@region.ToUpper()</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => Model.BodyRegion)" />
                    </div>
                </div>
            </EditForm>
        </div>
    </div>

    <div class="card-footer bg-transparent d-flex justify-content-end p-3 p-md-4">
        <div>
            <button type="submit" class="btn btn-purple" disabled="@(IsDisabled)" form="exerciseForm">
                <Saving IsSaving="@IsSubmitting"></Saving>
            </button>
            <button type="button" class="btn" @onclick="NavigateBack">
                Back
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public ExerciseFormModel Model { get; set; } = null!;

    [Parameter, EditorRequired]
    public EventCallback OnValidSubmit { get; set; }

    [Parameter]
    public EventCallback OnInput { get; set; }

    [Parameter]
    public bool IsSubmitting { get; set; }

    [Parameter]
    public bool IsDisabled { get; set; }

    // Optional context when the page is reached from /exercises/{region}
    [SupplyParameterFromQuery(Name = "bodyRegion")]
    public string? BodyRegion { get; set; }

    private void NavigateBack()
    {
        if (!string.IsNullOrWhiteSpace(BodyRegion))
        {
            var region = Uri.EscapeDataString(BodyRegion);
            Navigation.NavigateTo($"/exercises/{region}");
            return;
        }

        Navigation.NavigateTo("/exercise");
    }
}
