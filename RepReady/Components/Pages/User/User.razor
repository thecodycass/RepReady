@page "/user"
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject IHttpClientFactory HttpFactory
@inject ILogger<User> Logger

<PageTitle>User Profile</PageTitle>
<h1>Hello, @FullName()</h1>
<LoadingSpinner Show="@_isLoading" />

@if (_user != null)
{
    @if (!string.IsNullOrEmpty(_successMessage))
    {
        <div class="alert alert-success" role="alert">
            @_successMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @_errorMessage
        </div>
    }

    @if (!_isEditing)
    {
        <!-- Display Mode -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@_user.FirstName @_user.LastName</h5>
                <div class="mb-2">
                    <strong>Email:</strong> @_user.Email
                </div>
                <div class="mb-2">
                    <strong>Created:</strong> @_user.CreatedAt.ToString("d")
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary" @onclick="EnterEditMode">Edit</button>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Edit Mode -->
        <UserForm Model="@_editForm" OnValidSubmit="HandleUpdate" IsSubmitting="@_isSubmitting" OnCancel="CancelEdit" />
    }
}

@code {
    private UserDto? _user;
    private UserFormModel _editForm = new();
    private bool _isLoading = true;
    private bool _isEditing = false;
    private bool _isSubmitting = false;
    private string _errorMessage = string.Empty;
    private string _successMessage = string.Empty;
    private const int UserId = 1; // TODO: Change once I get a signin configured

    private string FullName()
    {
        var firstName = _user?.FirstName != null ? _user.FirstName : "User";
        var lastName = _user?.LastName != null ? _user.LastName : "";
        return $"{firstName} {lastName}";
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadUser();
    }

    private async Task LoadUser()
    {
        Logger.LogDebug("THIS IS A TEST");
        Logger.LogInformation("LoadUser started for user ID {UserId}", UserId);
        _isLoading = true;
        _errorMessage = string.Empty;

        try
        {
            var requestUrl = $"/v1/users/{UserId}";
            Logger.LogInformation("Making GET request to {Url}", requestUrl);

            using var http = HttpFactory.CreateClient("ApiClient");
            var response = await http.GetAsync(requestUrl);
            Logger.LogInformation("Received response with status code {StatusCode}", response.StatusCode);
            
            if (response.IsSuccessStatusCode)
            {
                _user = await response.Content.ReadFromJsonAsync<UserDto>();
                
                if (_user == null)
                {
                    // User not found, redirect to create page
                    Navigation.NavigateTo("/user/new", forceLoad: true);
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                // User doesn't exist, redirect to create page
                Navigation.NavigateTo("/user/new", forceLoad: true);
            }
            else
            {
                _errorMessage = $"Failed to load user. Status: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error loading user: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void EnterEditMode()
    {
        if (_user != null)
        {
            _editForm = new UserFormModel
            {
                FirstName = _user.FirstName,
                LastName = _user.LastName,
                Email = _user.Email
            };
            _isEditing = true;
            _successMessage = string.Empty;
            _errorMessage = string.Empty;
        }
    }

    private void CancelEdit()
    {
        _isEditing = false;
        _editForm = new();
        _errorMessage = string.Empty;
    }

    private async Task HandleUpdate()
    {
        Logger.LogInformation("HandleUpdate started for user ID {UserId}", UserId);
        _isSubmitting = true;
        _errorMessage = string.Empty;
        _successMessage = string.Empty;

        try
        {
            var updatedUser = new
            {
                id = UserId,
                firstName = _editForm.FirstName,
                lastName = _editForm.LastName,
                email = _editForm.Email,
                createdAt = _editForm.CreatedAt,
                updatedAt = DateTime.UtcNow,
                role = _editForm.Role,
            };
            Logger.LogInformation("Making PUT request to /v1/users/{UserId} with data: {@UpdatedUser}", UserId, updatedUser);
            
            using var http = HttpFactory.CreateClient("ApiClient");
            var response = await http.PutAsJsonAsync($"/v1/users/{UserId}", updatedUser);
            Logger.LogInformation("Received PUT response with status code {StatusCode}", response.StatusCode);

            if (response.IsSuccessStatusCode)
            {
                Logger.LogInformation("User updated successfully");
                _successMessage = "User updated successfully!";
                _isEditing = false;
                await LoadUser();
            }
            else
            {
                Logger.LogError("Failed to update user. Status: {StatusCode}", response.StatusCode);
                _errorMessage = $"Failed to update user. Status: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Exception occurred while updating user");
            _errorMessage = $"Error updating user: {ex.Message}";
        }
        finally
        {
            _isSubmitting = false;
            Logger.LogInformation("HandleUpdate completed, isSubmitting = {IsSubmitting}", _isSubmitting);
        }
    }
}
