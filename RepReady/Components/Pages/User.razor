@page "/user"
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject IHttpClientFactory HttpFactory
@inject ILogger<User> Logger

<PageTitle>User Profile</PageTitle>
<h1>Hello, @FullName()</h1>
<LoadingSpinner Show="@isLoading" />

@if (user != null)
{
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success" role="alert">
            @successMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }

    @if (!isEditing)
    {
        <!-- Display Mode -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@user.FirstName @user.LastName</h5>
                <div class="mb-2">
                    <strong>Email:</strong> @user.Email
                </div>
                <div class="mb-2">
                    <strong>Created:</strong> @user.CreatedAt.ToLocalTime().ToString("g")
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary" @onclick="EnterEditMode">Edit</button>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Edit Mode -->
        <div class="row">
            <div class="col-md-6">
                <EditForm Model="@editForm" OnValidSubmit="@HandleUpdate">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label for="firstName" class="form-label">First Name</label>
                        <InputText id="firstName" class="form-control" @bind-Value="editForm.FirstName" />
                        <ValidationMessage For="@(() => editForm.FirstName)" />
                    </div>

                    <div class="mb-3">
                        <label for="lastName" class="form-label">Last Name</label>
                        <InputText id="lastName" class="form-control" @bind-Value="editForm.LastName" />
                        <ValidationMessage For="@(() => editForm.LastName)" />
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <InputText id="email" type="email" class="form-control" @bind-Value="editForm.Email" />
                        <ValidationMessage For="@(() => editForm.Email)" />
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                            <Saving IsSaving="@isSubmitting"></Saving>
                        </button>
                        <button type="button" class="btn btn-secondary ms-2" @onclick="CancelEdit">Cancel</button>
                    </div>
                </EditForm>
            </div>
        </div>
    }
}

@code {
    private UserDto? user;
    private UserEditForm editForm = new();
    private bool isLoading = true;
    private bool isEditing = false;
    private bool isSubmitting = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private const int USER_ID = 1; // TODO: Change once I get a signin configured

    private string FullName()
    {
        var firstName = user?.FirstName != null ? user.FirstName : "User";
        var lastName = user?.LastName != null ? user.LastName : "";
        return $"{firstName} {lastName}";
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadUser();
    }

    private async Task LoadUser()
    {
        Logger.LogDebug("THIS IS A TEST");
        Logger.LogInformation("LoadUser started for user ID {UserId}", USER_ID);
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var requestUrl = $"/v1/users/{USER_ID}";
            Logger.LogInformation("Making GET request to {Url}", requestUrl);

            using var http = HttpFactory.CreateClient("ApiClient");
            var response = await http.GetAsync(requestUrl);
            Logger.LogInformation("Received response with status code {StatusCode}", response.StatusCode);
            
            if (response.IsSuccessStatusCode)
            {

                user = await response.Content.ReadFromJsonAsync<UserDto>();


                if (user == null)
                {

                    // User not found, redirect to create page
                    Navigation.NavigateTo("/user/new", forceLoad: true);
                    return;
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                // User doesn't exist, redirect to create page
                Navigation.NavigateTo("/user/new", forceLoad: true);
                return;
            }
            else
            {
                errorMessage = $"Failed to load user. Status: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading user: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void EnterEditMode()
    {
        if (user != null)
        {
            editForm = new UserEditForm
            {
                FirstName = user.FirstName,
                LastName = user.LastName,
                Email = user.Email
            };
            isEditing = true;
            successMessage = string.Empty;
            errorMessage = string.Empty;
        }
    }

    private void CancelEdit()
    {
        isEditing = false;
        editForm = new();
        errorMessage = string.Empty;
    }

    private async Task HandleUpdate()
    {
        Logger.LogInformation("HandleUpdate started for user ID {UserId}", USER_ID);
        isSubmitting = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            var updatedUser = new
            {
                id = USER_ID,
                first_name = editForm.FirstName,
                last_name = editForm.LastName,
                email = editForm.Email,
                created_at = user!.CreatedAt
            };
            Logger.LogInformation("Making PUT request to /v1/users/{UserId} with data: {@UpdatedUser}", USER_ID, updatedUser);
            using var http = HttpFactory.CreateClient("ApiClient");
            var response = await http.PutAsJsonAsync($"/v1/users/{USER_ID}", updatedUser);
            Logger.LogInformation("Received PUT response with status code {StatusCode}", response.StatusCode);

            if (response.IsSuccessStatusCode)
            {
                Logger.LogInformation("User updated successfully");
                successMessage = "User updated successfully!";
                isEditing = false;
                await LoadUser();
            }
            else
            {
                Logger.LogError("Failed to update user. Status: {StatusCode}", response.StatusCode);
                errorMessage = $"Failed to update user. Status: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Exception occurred while updating user");
            errorMessage = $"Error updating user: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
            Logger.LogInformation("HandleUpdate completed, isSubmitting = {IsSubmitting}", isSubmitting);
        }
    }

    private class UserEditForm
    {
        [Required(ErrorMessage = "First name is required")]
        public string FirstName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Last name is required")]
        public string LastName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email format")]
        public string Email { get; set; } = string.Empty;
    }
}
