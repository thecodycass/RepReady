@page "/exercise"
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject IHttpClientFactory HttpFactory
@inject ILogger<Exercise> Logger

<PageTitle>Exercises</PageTitle>
<HeaderRowWithButton HeaderText="Exercises" ButtonText="New Exercise" Route="exercise/new"/>

<div style="display: grid; grid-template-columns: repeat(7, 1fr); gap: 1rem;">
    @foreach (var exercise in @Globals.BodyRegions)
    {
        <a href="/exercises/@exercise" class="text-decoration-none">
            <div class="card bg-shadow-gray h-100">
                <div class="card-body d-flex justify-content-center text-center">
                    <h5 class="card-text">@exercise.ToUpper()</h5>
                </div>
            </div>
        </a>
    }
</div>